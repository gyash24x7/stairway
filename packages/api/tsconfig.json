		"allowImportingTsExtensions": true,
		"exactOptionalPropertyTypes": false,
		"noUncheckedIndexedAccess": false,
		"types": [ "node", "@cloudflare/workers-types" ]
	},
	"include": [ "src", "tests" ],
	"exclude": [ "node_modules" ]

{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": [ "@tsconfig/strictest" ],
	"compilerOptions": {
		"allowImportingTsExtensions": true,
		"jsx": "preserve",
		"module": "esnext",
		"moduleResolution": "bundler",
		"lib": [ "dom", "dom.iterable", "esnext" ]
	},
	"include": [ "src" ],
	"exclude": [ "node_modules", "tmp" ]
}

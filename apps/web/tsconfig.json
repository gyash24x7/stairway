{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "@common/tsconfig/react.json",
	"compilerOptions": {
		"lib": [ "DOM", "DOM.Iterable", "ESNext" ],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"jsx": "react-jsx"
	},
	"include": [ "src", "vite.config.mts" ],
	"exclude": [
		"src/**/*.stories.tsx",
		"**/*.stories.ts",
		"**/*.stories.js",
		"**/*.stories.jsx",
		"**/*.stories.tsx"
	]
}

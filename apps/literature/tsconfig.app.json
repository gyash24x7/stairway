{
  "extends": "./tsconfig.json",
  "compilerOptions": {
	"target": "ESNext",
	"useDefineForClassFields": true,
	"lib": [ "DOM", "DOM.Iterable", "ESNext" ],
	"module": "ESNext",
	"moduleResolution": "Node",
	"resolveJsonModule": true,
	"isolatedModules": true,
	"jsx": "react-jsx",
	"noEmit": true
  },
  "include": [ "src" ]
}
{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": [ "**/.env.*local" ],
	"pipeline": {
		"build": {
			"dependsOn": [ "^build" ],
			"outputs": [ "dist/**" ]
		},
		"test": {
			"outputs": [ "coverage/**" ]
		},
		"start": {
			"dependsOn": [ "build" ],
			"cache": false
		}
	}
}

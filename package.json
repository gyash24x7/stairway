{
	"name": "my-turborepo",
	"private": true,
	"scripts": {
		"migrate": "drizzle-kit generate && bun run scripts/apply-migrations.ts",
		"build:web": "turbo build --filter=@stairway/web",
		"build:backend": "bun run migrate",
		"dev:web": "turbo dev --filter=@stairway/web",
		"dev:backend": "turbo dev --filter=@stairway/backend",
		"start:web": "turbo start --filter=@stairway/web",
		"start:backend": "turbo start --filter=@stairway/backend"
	},
	"devDependencies": {
		"@tsconfig/bun": "1.0.7",
		"@tsconfig/strictest": "2.0.5",
		"@types/bun": "1.1.9",
		"drizzle-kit": "0.24.2",
		"turbo": "2.1.2",
		"typescript": "5.6.2"
	},
	"packageManager": "bun@1.1.18",
	"workspaces": [
		"apps/*",
		"packages/*",
		"packages/api/*",
		"packages/components/*",
		"packages/stores/*"
	]
}

{
	"name": "stairway",
	"private": true,
	"scripts": {
		"generate": "prisma generate --schema prisma",
		"load:env": "bun run scripts/load-env.ts",
		"dev": "turbo dev",
		"build": "bun run generate && turbo build",
		"build:web": "bun run generate && bun run load:env && turbo build --filter @stairway/web",
		"build:wss": "bun run load:env",
		"start": "turbo start",
		"start:web": "NODE_ENV=production turbo start --filter @stairway/web",
		"start:wss": "NODE_ENV=production turbo start --filter @stairway/wss"
	},
	"devDependencies": {
		"@tsconfig/bun": "1.0.7",
		"@tsconfig/strictest": "2.0.5",
		"@types/bun": "1.1.11",
		"prisma": "5.21.1",
		"prisma-json-types-generator": "3.1.1",
		"server-only": "0.0.1",
		"turbo": "2.2.1",
		"typescript": "5.6.3"
	},
	"packageManager": "bun@1.1.18",
	"workspaces": [
		"apps/*",
		"packages/*",
		"packages/api/*",
		"packages/components/*",
		"packages/stores/*"
	]
}

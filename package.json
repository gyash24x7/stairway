{
	"name": "stairway",
	"private": true,
	"scripts": {
		"load:env": "bun run scripts/load-env.ts",
		"migrate": "drizzle-kit generate && bun run scripts/apply-migrations.ts",
		"dev": "turbo dev",
		"build": "bun run migrate && bun run load:env && turbo build",
		"start": "turbo start"
	},
	"devDependencies": {
		"@tsconfig/bun": "1.0.7",
		"@tsconfig/strictest": "2.0.5",
		"@types/bun": "1.1.9",
		"drizzle-kit": "0.24.2",
		"prisma": "5.20.0",
		"turbo": "2.1.2",
		"typescript": "5.6.2"
	},
	"packageManager": "bun@1.1.18",
	"workspaces": [
		"apps/*",
		"packages/*",
		"packages/api/*",
		"packages/components/*",
		"packages/stores/*"
	]
}

{
	"name": "stairway",
	"private": true,
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "tsc -b && vite build",
		"clean": "rm -rf ./node_modules/.vite && rm -rf ./dist",
		"preview": "bun run build && vite preview",
		"deploy": "bun run build && wrangler deploy",
		"generate": "prisma generate && wrangler types ./types/cf-env.d.ts",
		"migrate:new": "bun run prisma/migrate.ts",
		"migrate:dev": "wrangler d1 migrations apply DB --local",
		"migrate:prd": "wrangler d1 migrations apply DB --remote"
	},
	"dependencies": {
		"@base-ui-components/react": "1.0.0-beta.3",

{
	"name": "stairway",
	"version": "1.0.0",
	"description": "Multiplayer game arena",
	"type": "module",
	"private": true,
	"scripts": {
		"build": "vite build",
		"dev": "NODE_ENV=${NODE_ENV:-development} vite dev --host --port 3000",
		"dev:init": "rw-scripts dev-init",
		"preview": "bun run vite preview",
		"clean": "rm -rf ./node_modules/.vite",
		"release": "rw-scripts ensure-deploy-env && npm run clean && npm run build && RWSDK_DEPLOY=1 wrangler deploy",
		"generate": "wrangler types",
		"types": "tsc",
		"migrate:new": "drizzle-kit generate",
		"migrate:dev": "wrangler d1 migrations apply DB --local",
		"migrate:prd": "wrangler d1 migrations apply DB --remote"
	},
	"dependencies": {
		"@orpc/server": "1.4.5",
		"@oslojs/crypto": "1.0.1",
		"@oslojs/encoding": "1.1.0",
		"@simplewebauthn/browser": "13.1.0",
		"@simplewebauthn/server": "13.1.1",
		"@tailwindcss/vite": "4.1.10",
		"@tanstack/react-store": "0.7.1",
		"class-variance-authority": "0.7.1",
		"clsx": "2.1.1",
		"cookie": "1.0.2",
		"drizzle-orm": "0.44.2",
		"immer": "10.1.1",
		"lucide-react": "0.519.0",
		"radix-ui": "1.4.2",
		"react": "19.1.0",
		"react-dom": "19.1.0",
		"redaxios": "0.5.1",
		"rwsdk": "0.1.0-alpha.18",
		"sonner": "2.0.5",
		"tailwind-merge": "3.3.1",
		"tailwindcss": "4.1.10",
		"tslog": "4.9.3",
		"tw-animate-css": "1.3.4",
		"ulid": "3.0.1",
		"unique-names-generator": "4.7.1",
		"usehooks-ts": "3.1.1",
		"vaul": "1.1.2",
		"zod": "3.25.67"
	},
	"devDependencies": {
		"@tsconfig/bun": "1.0.8",
		"@tsconfig/strictest": "2.0.5",
		"@types/node": "22.15.32",
		"@types/react": "19.1.8",
		"@types/react-dom": "19.1.6",
		"drizzle-kit": "0.31.1",
		"typescript": "5.8.3",
		"vite": "6.3.5",
		"wrangler": "4.20.5"
	},
	"packageManager": "bun@1.2.7"
}

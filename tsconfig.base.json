{
	"compileOnSave": false,
	"extends": [ "@tsconfig/node20", "@tsconfig/strictest" ],
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "ESNext",
		"resolveJsonModule": true,
		"useDefineForClassFields": true,
		"noFallthroughCasesInSwitch": false,
		"verbatimModuleSyntax": false,
		"exactOptionalPropertyTypes": false,
		"strictPropertyInitialization": false,
		"noUncheckedIndexedAccess": false,
		"importHelpers": true,
		"declaration": false,
		"isolatedModules": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importsNotUsedAsValues": "error",
		"ignoreDeprecations": "5.0",
		"types": [ "node" ],
		"skipLibCheck": true,
		"baseUrl": "./",
		"paths": {
			"@common/cards": [ "packages/common/cards/src/index.ts" ],
			"@common/core": [ "packages/common/core/src/index.ts" ],
			"@common/ui": [ "packages/common/ui/src/index.ts" ],
			"@common/words": [ "packages/common/words/src/index.ts" ],
			"@literature/core": [ "packages/literature/core/src/index.ts" ],
			"@literature/data": [ "packages/literature/data/src/index.ts" ],
			"@literature/ui": [ "packages/literature/ui/src/index.ts" ],
			"@wordle/core": [ "packages/wordle/core/src/index.ts" ],
			"@wordle/data": [ "packages/wordle/data/src/index.ts" ],
			"@wordle/ui": [ "packages/wordle/ui/src/index.ts" ]
		}
	},
	"exclude": [ "node_modules", "tmp" ]
}

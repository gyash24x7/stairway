{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Default",
	"compileOnSave": false,
	"extends": [ "@tsconfig/node18", "@tsconfig/strictest" ],
	"compilerOptions": {
		"verbatimModuleSyntax": false,
		"exactOptionalPropertyTypes": false,
		"strictPropertyInitialization": false,
		"noUncheckedIndexedAccess": false,
		"ignoreDeprecations": "5.0",
		"importHelpers": true,
		"esModuleInterop": true,
		"rootDir": ".",
		"baseUrl": ".",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"paths": {
			"@s2h/auth": [ "libs/common/auth/src/index.ts" ],
			"@s2h/cards": [ "libs/common/cards/src/index.ts" ],
			"@s2h/dtos": [ "libs/dtos/src/index.ts" ],
			"@s2h/literature/dtos": [ "libs/literature/dtos/src/index.ts" ],
			"@s2h/literature/router": [ "libs/literature/router/src/index.ts" ],
			"@s2h/literature/ui": [ "libs/literature/ui/src/index.ts" ],
			"@s2h/literature/utils": [ "libs/literature/utils/src/index.ts" ],
			"@s2h/ui": [ "libs/ui/src/index.ts" ],
			"@s2h/utils": [ "libs/utils/src/index.ts" ]
		}
	},
	"exclude": [ "node_modules", "tmp", "dist", "coverage" ]
}
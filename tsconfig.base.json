{
	"compileOnSave": false,
	"extends": [ "@tsconfig/node18", "@tsconfig/strictest" ],
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "ESNext",
		"resolveJsonModule": true,
		"useDefineForClassFields": true,
		"verbatimModuleSyntax": false,
		"exactOptionalPropertyTypes": false,
		"strictPropertyInitialization": false,
		"noUncheckedIndexedAccess": false,
		"importHelpers": true,
		"declaration": false,
		"isolatedModules": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importsNotUsedAsValues": "error",
		"ignoreDeprecations": "5.0",
		"rootDir": ".",
		"baseUrl": ".",
		"types": [ "node" ],
		"paths": {
			"@literature/core": [ "packages/literature/core/src/index.ts" ],
			"@literature/types": [ "packages/literature/types/src/index.ts" ],
			"@literature/ui": [ "packages/literature/ui/src/index.ts" ],
			"@s2h/cards": [ "packages/common/cards/src/index.ts" ],
			"@s2h/core": [ "packages/common/core/src/index.ts" ],
			"@s2h/ui": [ "packages/common/ui/src/index.ts" ]
		},
		"skipLibCheck": true
	},
	"exclude": [ "node_modules", "tmp" ]
}

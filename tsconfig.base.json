{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Default",
	"compileOnSave": false,
	"extends": [ "@tsconfig/node18", "@tsconfig/strictest" ],
	"compilerOptions": {
		"verbatimModuleSyntax": false,
		"exactOptionalPropertyTypes": false,
		"strictPropertyInitialization": false,
		"noUncheckedIndexedAccess": false,
		"ignoreDeprecations": "5.0",
		"importHelpers": true,
		"esModuleInterop": true,
		"rootDir": ".",
		"baseUrl": ".",
		"paths": {
			"@api/client": [ "packages/api/client/src/index.ts" ],
			"@api/common": [ "packages/api/common/src/index.ts" ],
			"@api/domain": [ "packages/api/domain/src/index.ts" ],
			"@prime/ui": [ "packages/prime/ui/src/index.ts" ]
		}
	},
	"exclude": [ "node_modules", "tmp", "dist", "coverage" ]
}
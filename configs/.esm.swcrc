{
	"$schema": "https://json.schemastore.org/swcrc",
	"sourceMaps": true,
	"exclude": [ "dist", "tests" ],
	"module": {
		"type": "es6",
		"strict": true,
		"strictMode": true
	},
	"jsc": {
		"target": "es2022",
		"parser": {
			"syntax": "typescript",
			"decorators": true,
			"dynamicImport": true,
			"tsx": true
		},
		"transform": {
			"legacyDecorator": true,
			"decoratorMetadata": true
		},
		"keepClassNames": true,
		"baseUrl": "./"
	},
	"minify": false
}
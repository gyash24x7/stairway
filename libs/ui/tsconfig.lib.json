{
  "extends": "./tsconfig.json",
  "compilerOptions": {
	"target": "ESNext",
	"useDefineForClassFields": true,
	"lib": [ "DOM", "DOM.Iterable", "ESNext" ],
	"module": "ESNext",
	"moduleResolution": "Node",
	"resolveJsonModule": true,
	"isolatedModules": true,
	"jsx": "react-jsx",
	"noEmit": true
  },
  "files": [
	"../../node_modules/@nrwl/react/typings/cssmodule.d.ts",
	"../../node_modules/@nrwl/react/typings/image.d.ts"
  ],
  "exclude": [
	"src/**/*.spec.ts",
	"src/**/*.test.ts",
	"src/**/*.spec.tsx",
	"src/**/*.test.tsx",
	"src/**/*.spec.js",
	"src/**/*.test.js",
	"src/**/*.spec.jsx",
	"src/**/*.test.jsx",
	"src/**/*.stories.ts",
	"src/**/*.stories.js",
	"src/**/*.stories.jsx",
	"src/**/*.stories.tsx"
  ],
  "include": [ "src" ]
}
